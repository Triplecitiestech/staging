# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Cloudflare Turnstile (Spam Protection)
# Get your keys from: https://dash.cloudflare.com/
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Contact Form Configuration
# The email address where contact form submissions will be sent
NEXT_PUBLIC_CONTACT_EMAIL=your_email@example.com

# Cloud Radial Chatbot
# Set to 'true' to enable the chatbot, 'false' to disable it
NEXT_PUBLIC_ENABLE_CHATBOT=true

# Customer Onboarding Portal Passwords
# Add a password for each company's onboarding portal
# Format: ONBOARDING_PASSWORD_<COMPANY_SLUG_UPPERCASE>
# Company slug must match the URL path (e.g., /onboarding/ecospect)
# Replace hyphens with underscores in the env variable name
ONBOARDING_PASSWORD_ECOSPECT=your_secure_password_here
ONBOARDING_PASSWORD_ALL_SPEC_FINISHING=your_secure_password_here
# Add more companies as needed:
# ONBOARDING_PASSWORD_XNG=another_secure_password
# ONBOARDING_PASSWORD_EZ_RED=yet_another_secure_password
